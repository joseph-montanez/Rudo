<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li class="active">Sign Up</li>
</ol>
<div class="col-sm-8">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Sign up</h3>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal", role: "form"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: 'col-sm-5 control-label' %>
          <div class="col-sm-7">
            <%= f.email_field :email, class: 'form-control', autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'col-sm-5 control-label' %>
          <div class="col-sm-7">
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>
        <% if @validatable %>
          <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            </div>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'col-sm-5 control-label' %>
          <div class="col-sm-7">
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-5 col-sm-7">
            <%= f.submit "Sign up", class: 'btn btn-primary navbar-btn' %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-5 col-sm-7">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div> <!-- /.panel.panel-default -->
</div> <!-- /.col-sm-6 -->


